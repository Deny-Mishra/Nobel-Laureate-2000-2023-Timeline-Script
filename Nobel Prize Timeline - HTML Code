        function TimelineCard({ data, index, isLeft }) {
          const [isExpanded, setIsExpanded] = useState(false);
          const category = categories.find(c => c.id === data.category);
          
          return (
            <motion.div initial={{ opacity: 0, x: isLeft ? -50 : 50 }} whileInView={{ opacity: 1, x: 0 }} viewport={{ once: true, margin: "-50px" }} transition={{ duration: 0.5, delay: index * 0.05 }} className={`relative flex items-center ${isLeft ? 'md:flex-row-reverse' : ''} mb-8 md:mb-0`}>
              <motion.div initial={{ scaleX: 0 }} whileInView={{ scaleX: 1 }} viewport={{ once: true }} transition={{ duration: 0.6, delay: index * 0.05 }} className={`hidden md:block absolute top-1/2 w-8 h-1 bg-gradient-to-r ${isLeft ? 'right-1/2 mr-4 origin-right' : 'left-1/2 ml-4 origin-left'} ${category.color.replace('bg-', 'from-')} to-transparent opacity-60`} style={{ transformOrigin: isLeft ? 'right' : 'left' }} />
              <div className="hidden md:flex absolute left-1/2 -translate-x-1/2 z-10">
                <motion.div initial={{ scale: 0, rotate: -180 }} whileInView={{ scale: 1, rotate: 0 }} viewport={{ once: true }} transition={{ type: "spring", stiffness: 200, delay: index * 0.05 }} whileHover={{ scale: 1.15, rotate: 5 }} whileTap={{ scale: 0.95 }} className={`w-16 h-16 rounded-full bg-gradient-to-br ${category.color.replace('bg-', 'from-')} ${category.color.replace('bg-', 'to-')}/80 flex items-center justify-center shadow-xl cursor-pointer ring-4 ring-white`} onClick={() => setIsExpanded(!isExpanded)}>
                  <span className="text-white font-bold text-lg drop-shadow-md">{data.year}</span>
                </motion.div>
              </div>
              <div className={`w-full md:w-[calc(50%-4rem)] ${isLeft ? 'md:mr-auto md:pr-8' : 'md:ml-auto md:pl-8'}`}>
                <motion.div layout onClick={() => setIsExpanded(!isExpanded)} whileHover={{ scale: 1.02, y: -4 }} transition={{ type: "spring", stiffness: 300, damping: 20 }} className={`relative bg-gradient-to-br from-white to-slate-50/50 rounded-3xl shadow-lg hover:shadow-2xl cursor-pointer border border-slate-200/50 overflow-hidden backdrop-blur-sm ${isExpanded ? 'ring-2 ring-offset-2 ' + category.borderColor.replace('border-', 'ring-') : ''}`} style={{ transition: 'all 0.4s cubic-bezier(0.4, 0, 0.2, 1)' }}>
                  <div className={`absolute top-0 left-0 right-0 h-1.5 bg-gradient-to-r ${category.color.replace('bg-', 'from-')} ${category.color.replace('bg-', 'to-')}/80 opacity-80`} />
                  <div className="absolute inset-0 opacity-[0.03]" style={{ backgroundImage: 'radial-gradient(circle at 2px 2px, currentColor 1px, transparent 0)', backgroundSize: '24px 24px' }} />
                  <div className="p-6 pt-7 relative">
                    <div className="md:hidden flex items-center gap-3 mb-4">
                      <div className={`w-11 h-11 rounded-full bg-gradient-to-br ${category.color.replace('bg-', 'from-')} ${category.color.replace('bg-', 'to-')}/80 flex items-center justify-center shadow-md ring-2 ring-white`}>
                        <span className="text-white font-bold text-sm drop-shadow">{data.year}</span>
                      </div>
                      <span className={`text-xs font-semibold px-3 py-1.5 rounded-full ${category.bgLight} ${category.textColor} border ${category.borderColor} shadow-sm`}>{category.label}</span>
                    </div>
                    <div className="flex items-start justify-between gap-4">
                      <div className="flex-1">
                        <div className="flex items-center gap-2 mb-3">
                          <motion.div whileHover={{ rotate: 360 }} transition={{ duration: 0.6 }}>
                            <Award className={`w-5 h-5 ${category.textColor} drop-shadow-sm`} />
                          </motion.div>
                          <span className={`hidden md:inline text-xs font-semibold px-3 py-1 rounded-full ${category.bgLight} ${category.textColor} border ${category.borderColor} shadow-sm`}>
                            {category.id === 'A' ? 'Theory' : category.id === 'B' ? 'Empirical' : 'Macro/Finance'}
                          </span>
                        </div>
                        <h3 className="font-bold text-slate-900 text-xl leading-tight mb-2 bg-gradient-to-r from-slate-800 to-slate-600 bg-clip-text text-transparent">{data.laureates}</h3>
                        <p className="text-slate-600 text-sm font-medium leading-relaxed">{data.focus_area}</p>
                      </div>
                      <motion.div animate={{ rotate: isExpanded ? 180 : 0 }} transition={{ type: "spring", stiffness: 200 }} className="flex-shrink-0 mt-1">
                        <div className={`p-2 rounded-full ${isExpanded ? category.bgLight : 'bg-slate-100'} transition-colors duration-300`}>
                          <ChevronDown className={`w-5 h-5 ${isExpanded ? category.textColor : 'text-slate-400'}`} />
                        </div>
                      </motion.div>
                    </div>
                    <AnimatePresence>
                      {isExpanded && (
                        <motion.div initial={{ opacity: 0, height: 0 }} animate={{ opacity: 1, height: 'auto' }} exit={{ opacity: 0, height: 0 }} transition={{ duration: 0.3 }} className="overflow-hidden">
                          <div className="mt-4 pt-4 border-t border-slate-100 space-y-4">
                            {data.universities && data.universities.length > 0 && (
                              <motion.div initial={{ opacity: 0, y: 10 }} animate={{ opacity: 1, y: 0 }} transition={{ delay: 0.1 }}>
                                <div className="flex items-center gap-2 mb-3">
                                  <div className={`p-1.5 rounded-lg ${category.bgLight}`}><GraduationCap className={`w-4 h-4 ${category.textColor}`} /></div>
                                  <h4 className="font-bold text-slate-800 text-sm">Affiliated Universities</h4>
                                </div>
                                <div className="flex flex-wrap gap-2">
                                  {data.universities.map((uni, idx) => (
                                    <motion.span key={idx} initial={{ opacity: 0, scale: 0.8 }} animate={{ opacity: 1, scale: 1 }} transition={{ delay: 0.1 + idx * 0.05 }} whileHover={{ scale: 1.05 }} className={`text-xs px-3 py-1.5 rounded-full ${category.bgLight} ${category.textColor} border ${category.borderColor} font-medium shadow-sm hover:shadow-md transition-shadow`}>{uni}</motion.span>
                                  ))}
                                </div>
                              </motion.div>
                            )}
                            {data.major_contributions && data.major_contributions.length > 0 && (
                              <motion.div initial={{ opacity: 0, y: 10 }} animate={{ opacity: 1, y: 0 }} transition={{ delay: 0.2 }}>
                                <div className="flex items-center gap-2 mb-3">
                                  <div className="p-1.5 rounded-lg bg-emerald-50"><TrendingUp className="w-4 h-4 text-emerald-600" /></div>
                                  <h4 className="font-bold text-slate-800 text-sm">Major Contributions</h4>
                                </div>
                                <ul className="space-y-2">
                                  {data.major_contributions.map((contribution, idx) => (
                                    <motion.li key={idx} initial={{ opacity: 0, x: -10 }} animate={{ opacity: 1, x: 0 }} transition={{ delay: 0.2 + idx * 0.05 }} className="text-slate-700 text-sm leading-relaxed flex items-start gap-3 group">
                                      <span className="text-emerald-500 font-bold mt-0.5 group-hover:scale-125 transition-transform">•</span>
                                      <span className="flex-1">{contribution}</span>
                                    </motion.li>
                                  ))}
                                </ul>
                              </motion.div>
                            )}
                            {data.key_publications && data.key_publications.length > 0 && (
                              <motion.div initial={{ opacity: 0, y: 10 }} animate={{ opacity: 1, y: 0 }} transition={{ delay: 0.3 }}>
                                <div className="flex items-center gap-2 mb-3">
                                  <div className="p-1.5 rounded-lg bg-blue-50"><BookOpen className="w-4 h-4 text-blue-600" /></div>
                                  <h4 className="font-bold text-slate-800 text-sm">Key Publications</h4>
                                </div>
                                <ul className="space-y-2.5">
                                  {data.key_publications.map((pub, idx) => (
                                    <motion.li key={idx} initial={{ opacity: 0, x: -10 }} animate={{ opacity: 1, x: 0 }} transition={{ delay: 0.3 + idx * 0.05 }} whileHover={{ x: 4 }} className="text-slate-700 text-xs leading-relaxed pl-4 border-l-2 border-blue-200 hover:border-blue-400 transition-colors group">
                                      <span className="group-hover:text-blue-700 transition-colors">{pub}</span>
                                    </motion.li>
                                  ))}
                                </ul>
                              </motion.div>
                            )}
                          </div>
                        </motion.div>
                      )}
                    </AnimatePresence>
                  </div>
                </motion.div>
              </div>
            </motion.div>
          );
        }

        function CategoryLegend({ activeFilter, onFilterChange }) {
          return (
            <div className="flex flex-wrap justify-center gap-3 mb-8">
              <motion.button whileHover={{ scale: 1.05, y: -2 }} whileTap={{ scale: 0.95 }} onClick={() => onFilterChange('all')} className={`px-5 py-2.5 rounded-full text-sm font-semibold transition-all duration-300 ${activeFilter === 'all' ? 'bg-gradient-to-r from-slate-800 to-slate-900 text-white shadow-xl shadow-slate-400/50' : 'bg-white text-slate-600 border-2 border-slate-200 hover:border-slate-400 shadow-md hover:shadow-lg'}`}>All Categories</motion.button>
              {categories.map((cat) => (
                <motion.button key={cat.id} whileHover={{ scale: 1.05, y: -2 }} whileTap={{ scale: 0.95 }} onClick={() => onFilterChange(cat.id)} className={`px-5 py-2.5 rounded-full text-sm font-semibold transition-all duration-300 flex items-center gap-2 ${activeFilter === cat.id ? `bg-gradient-to-r ${cat.color.replace('bg-', 'from-')} ${cat.color.replace('bg-', 'to-')}/80 text-white border-2 ${cat.borderColor} shadow-xl ${cat.color.replace('bg-', 'shadow-')}/50` : 'bg-white text-slate-600 border-2 border-slate-200 hover:border-slate-400 shadow-md hover:shadow-lg'}`}>
                  <motion.span whileHover={{ scale: 1.3, rotate: 360 }} transition={{ duration: 0.4 }} className={`w-3 h-3 rounded-full ${activeFilter === cat.id ? 'bg-white shadow-md' : cat.color}`} />
                  <span className="hidden sm:inline">{cat.label}</span>
                  <span className="sm:hidden">{cat.id === 'A' ? 'Theory' : cat.id === 'B' ? 'Empirical' : 'Macro'}</span>
                  <span className={`text-xs ${activeFilter === cat.id ? 'opacity-90' : 'opacity-60'} font-bold`}>({cat.percentage})</span>
                </motion.button>
              ))}
            </div>
          );
        }

        function TimelineHeader() {
          return (
            <div className="text-center mb-12 md:mb-16">
              <motion.div initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }} transition={{ duration: 0.6 }}>
                <div className="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-slate-100 text-slate-600 text-sm font-medium mb-6">
                  <Award className="w-4 h-4" />
                  <span>Sveriges Riksbank Prize in Economic Sciences</span>
                </div>
                <h1 className="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-800 mb-4 tracking-tight">
                  Nobel Laureates in
                  <span className="block bg-gradient-to-r from-emerald-600 via-amber-500 to-sky-500 bg-clip-text text-transparent">Economics</span>
                </h1>
                <p className="text-slate-500 text-lg md:text-xl max-w-2xl mx-auto mb-8">A visual journey through two decades of groundbreaking economic thought</p>
                <div className="flex flex-wrap justify-center gap-6 md:gap-12 text-center">
                  {[
                    { icon: TrendingUp, value: '24', label: 'Years', color: 'from-emerald-400 to-emerald-600', shadow: 'shadow-emerald-200' },
                    { icon: Award, value: '50+', label: 'Laureates', color: 'from-amber-400 to-amber-600', shadow: 'shadow-amber-200' },
                    { icon: GraduationCap, value: '11', label: 'Top Universities', color: 'from-sky-400 to-sky-600', shadow: 'shadow-sky-200' }
                  ].map((stat, i) => (
                    <motion.div key={i} initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }} transition={{ duration: 0.6, delay: 0.2 + i * 0.1 }} className="flex flex-col items-center">
                      <div className={`w-12 h-12 rounded-2xl bg-gradient-to-br ${stat.color} flex items-center justify-center mb-2 shadow-lg ${stat.shadow}`}>
                        <stat.icon className="w-6 h-6 text-white" />
                      </div>
                      <span className="text-2xl font-bold text-slate-800">{stat.value}</span>
                      <span className="text-sm text-slate-500">{stat.label}</span>
                    </motion.div>
                  ))}
                </div>
              </motion.div>
            </div>
          );
        }

        function Timeline() {
          const [activeFilter, setActiveFilter] = useState('all');
          const filteredData = useMemo(() => activeFilter === 'all' ? nobelData : nobelData.filter(item => item.category === activeFilter), [activeFilter]);

          return (
            <div className="min-h-screen bg-gradient-to-b from-slate-50 via-white to-slate-50">
              <div className="max-w-6xl mx-auto px-4 py-12 md:py-20">
                <TimelineHeader />
                <CategoryLegend activeFilter={activeFilter} onFilterChange={setActiveFilter} />
                <div className="relative">
                  <motion.div initial={{ scaleY: 0 }} whileInView={{ scaleY: 1 }} viewport={{ once: true }} transition={{ duration: 1.2, ease: "easeOut" }} className="hidden md:block absolute left-1/2 top-0 bottom-0 w-1 bg-gradient-to-b from-emerald-300 via-amber-300 to-sky-300 -translate-x-1/2 origin-top rounded-full shadow-lg" style={{ transformOrigin: 'top' }} />
                  <div className="md:hidden absolute left-5 top-0 bottom-0 w-1 bg-gradient-to-b from-emerald-300 via-amber-300 to-sky-300 rounded-full shadow-md" />
                  <div className="relative py-8">
                    {filteredData.map((item, index) => (
                      <TimelineCard key={item.year} data={item} index={index} isLeft={index % 2 === 0} />
                    ))}
                  </div>
                  <motion.div initial={{ opacity: 0, scale: 0 }} whileInView={{ opacity: 1, scale: 1 }} viewport={{ once: true }} transition={{ type: "spring", stiffness: 200, delay: 0.5 }} whileHover={{ scale: 1.5, rotate: 180 }} className="hidden md:flex absolute left-1/2 -translate-x-1/2 bottom-0 w-6 h-6 rounded-full bg-gradient-to-br from-slate-400 to-slate-600 shadow-lg ring-4 ring-white" />
                </div>
                <motion.div initial={{ opacity: 0, y: 30 }} whileInView={{ opacity: 1, y: 0 }} viewport={{ once: true }} className="mt-16 p-8 bg-white rounded-3xl shadow-sm border border-slate-100">
                  <h2 className="text-xl font-semibold text-slate-800 mb-6 text-center">Evolution of Nobel Prize Focus</h2>
                  <div className="grid md:grid-cols-3 gap-6">
                    <div className="p-4 rounded-2xl bg-gradient-to-br from-emerald-50 to-emerald-100/50 border border-emerald-100">
                      <h3 className="font-semibold text-emerald-800 mb-2">2000-2007: Foundations</h3>
                      <p className="text-sm text-emerald-700/80">Information economics, game theory, mechanism design, time series methods</p>
                    </div>
                    <div className="p-4 rounded-2xl bg-gradient-to-br from-amber-50 to-amber-100/50 border border-amber-100">
                      <h3 className="font-semibold text-amber-800 mb-2">2008-2015: Empirical Revolution</h3>
                      <p className="text-sm text-amber-700/80">Market design applications, behavioral experiments, development RCTs</p>
                    </div>
                    <div className="p-4 rounded-2xl bg-gradient-to-br from-sky-50 to-sky-100/50 border border-sky-100">
                      <h3 className="font-semibold text-sky-800 mb-2">2016-2024: Grand Challenges</h3>
                      <p className="text-sm text-sky-700/80">Climate economics, financial stability, inequality, gender gaps</p>
                    </div>
                  </div>
                </motion.div>
              </div>
            </div>
          );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<Timeline />);
    </script>
</body>
</html>
